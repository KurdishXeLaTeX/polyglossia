\def\dateoriya{%
  \def\oriyamonth{%
    \ifcase\month\or
     ଜାନୁଆରୀ\or
     ଫେବ୍ରୁଆରୀ\or
     ମାର୍ଚ\or
     ଏପ୍ରିଲ\or
     ମେ\or
     ଜୁନ\or
     ଜୁଲାଇ\or
     ଅଗଷ୍ଟ\or
     ସେପ୍ଟେମ୍ବର\or
     ଅକ୍ଟୋବର\or
     ନଭେମ୍ବର\or
     ଡିସେମ୍ବର\fi}%
  \def\today{\oriyanumber\day\space\oriyamonth\space\oriyanumber\year}%
}

%% Based on the settings displays rrespective numbers
\def\oriyanumber#1{%
  \iforiya@numerals
  \oriyadigits{\number#1}%
  \else
  \number#1%
  \fi
}

