%% \oriya@numerals variable will be set to true or false depending on the option provided in \setmainlanguage
%% \oriya@numerals true by default or when we set \setmainlanguage[numerals=Oriya]{oriya}
%% \oriya@numerals false when we set \setmainlanguage[numerals=Western]{oriya}
\def\tmp@western{Western}
\newif\iforiya@numerals
\oriya@numeralstrue

\define@key{oriya}{numerals}[Oriya]{%
  \def\@tmpa{#1}%
  \ifx\@tmpa\tmp@western
    \oriya@numeralsfalse
  \fi}

  
