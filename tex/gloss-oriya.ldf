\ProvidesFile{gloss-oriyav2.ldf}[polyglossia: module for oriya]
\makeatletter
\PolyglossiaSetup{oriya}{
  script=Oriya,
  scripttag=orya,
  langtag=ORI,
  hyphennames={oriya},
  hyphenmins={2,2}, %FIXME
  fontsetup=true
}

%% Defining Oriya digits equivalents to english
\def\oriyadigits#1{\expandafter\@oriya@digits #1@}
\def\@oriya@digits#1{%
  \ifx @#1% then terminate
  \else
    \ifx0#1୦\else\ifx1#1୧\else\ifx2#1୨\else\ifx3#1୩\else\ifx4#1୪\else\ifx5#1୫\else\ifx6#1୬\else\ifx7#1୭\else\ifx8#1୮\else\ifx9#1୯\else#1\fi\fi\fi\fi\fi\fi\fi\fi\fi\fi
    \expandafter\@oriya@digits
  \fi
}
